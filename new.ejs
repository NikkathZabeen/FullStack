
<% layout('layouts/boilerplate.ejs') -%>
<div class="row mt-3">
    <div class="col-8 offset-2">
       
        <h3>Create a new Listing</h3>
        
    <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3"> 
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" placeholder="Enter Catchy Title"  class="form-control" required >
            <div class="valid-feedback">
                Looks good!
              </div>
        </div>
       
       <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]"  placeholder="Enter description" class="form-control" required ></textarea>
        <div class="invalid-feedback">
            Please give a short description.
          </div>
       </div>
        
        <div class="mb-3">
            <label for="image" class="form-label">Image</label>
            <input type="file" name="listing[image]"  class="form-control" required>
        </div>

        <div class="mb-3">
            <label for="category" class="form-label">Category</label>
            <select  type="submit" id="category" name=listing[category] class="form-select form-control" aria-label="Default select example" required>
             <% const categories = ["Trending", "Rooms", "IconicCities", "Mountains", "Castles", "Amazingpools", "Camping", "Farms", "Artic", "Domes", "Boats"]; %> 
                <% categories.forEach((category) => { %>
                  <option value="<%= category %>"><%= category %></option>
                <% }); %>
              </select>
           

        </div>
       
        <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" placeholder="1200" class="form-control "required>
            <div class="invalid-feedback">
                Please provide valid price.
              </div>
        </div>
       
        <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input type="text" name="listing[country]"placeholder="India"  class="form-control" required>
            <div class="invalid-feedback">
                Please provide a valid country.
              </div>
        </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]" placeholder="Vijayawada,Andhara Pradesh" class="form-control "required>
            <div class="invalid-feedback">
                Please provide a valid location.
              </div>
        </div>
        
       
        <button class="btn btn-dark add-btn mt-3">Add</button>
        
        
    </form>
</div>
</div>
<script src="/js/script.js"></script>
 